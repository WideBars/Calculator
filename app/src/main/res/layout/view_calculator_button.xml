<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calculator_holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hapticFeedbackEnabled="true"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calculator_wrapper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="4:5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/divider_horizontal_one"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.20"/>

        <View
            android:id="@+id/divider_horizontal_two"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"/>

        <View
            android:id="@+id/divider_horizontal_three"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"/>

        <View
            android:id="@+id/divider_horizontal_four"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8"/>

        <View
            android:id="@+id/divider_vertical_one"
            android:layout_width="1px"
            android:layout_height="0dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/divider_vertical_two"
            android:layout_width="1px"
            android:layout_height="0dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/divider_vertical_three"
            android:layout_width="1px"
            android:layout_height="0dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/btn_clear"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="C"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_one" />

        <TextView
            android:id="@+id/btn_reset"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="AC"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_one" />

        <TextView
            android:id="@+id/btn_power"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="^"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_one" />

        <TextView
            android:id="@+id/btn_root"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="âˆš"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_one"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_one" />

        <ImageView
            android:id="@+id/btn_percent"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_percent"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_two"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_three"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_one" />

        <ImageView
            android:id="@+id/btn_divide"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_divide"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_one" />

        <TextView
            android:id="@+id/btn_7"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_one"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_one"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_two" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="8"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_one"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_two"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_one"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_two" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="9"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_two"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_three"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_one"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_two" />

        <ImageView
            android:id="@+id/btn_multiply"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_multiply"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_three"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_one" />

        <TextView
            android:id="@+id/btn_4"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_one"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_two"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_three" />

        <TextView
            android:id="@+id/btn_5"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="5"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_one"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_two"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_two"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_three" />

        <TextView
            android:id="@+id/btn_6"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="6"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_two"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_three"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_two"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_three" />

        <ImageView
            android:id="@+id/btn_minus"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_minus"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_two"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_three" />

        <TextView
            android:id="@+id/btn_1"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_one"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_three"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_four" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="2"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_one"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_two"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_three"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_four" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="3"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_two"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_three"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_three"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_four" />

        <ImageView
            android:id="@+id/btn_plus"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_plus"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_three"
            app:layout_constraintBottom_toBottomOf="@+id/divider_horizontal_four" />

        <ImageView
            android:id="@+id/btn_convert"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_calculator_scale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_one"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_four"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/btn_0"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_one"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_two"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_four"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/btn_decimal"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="."
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_two"
            app:layout_constraintEnd_toEndOf="@+id/divider_vertical_three"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_four"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/btn_equals"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_equals"
            app:layout_constraintStart_toStartOf="@+id/divider_vertical_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider_horizontal_four"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
