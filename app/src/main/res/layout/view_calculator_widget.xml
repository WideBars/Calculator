<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculator_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hapticFeedbackEnabled="true"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingTop="@dimen/smaller_margin"
    android:paddingBottom="@dimen/normal_margin"
    android:paddingHorizontal="@dimen/smaller_margin"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/formula"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:fontFamily="sans-serif"
        android:gravity="end|bottom"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/normal_margin"
        android:textSize="@dimen/formula_text_size"
        android:alpha="0.6" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.0"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/normal_margin"
        android:textSize="@dimen/widget_display_text_size"
        tools:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/btn_clear"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="C"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_reset"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="AC"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_percent"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="%"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_divide"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="÷"
            android:textStyle="bold"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/btn_7"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="7"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="8"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="9"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_multiply"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="×"
            android:textStyle="bold"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/btn_4"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="4"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_5"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="5"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_6"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="6"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_minus"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="–"
            android:textStyle="bold"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/btn_1"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="1"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="2"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="3"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_plus"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="+"
            android:textStyle="bold"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/btn_convert"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/ic_calculator" />

        <TextView
            android:id="@+id/btn_0"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="0"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_decimal"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="."
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/btn_equals"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginHorizontal="2dp"
            android:gravity="center"
            android:text="="
            android:textStyle="bold"
            android:includeFontPadding="false" />
    </LinearLayout>
</LinearLayout>
